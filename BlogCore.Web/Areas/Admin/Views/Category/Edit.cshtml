@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Editar Categoría";
}


<div class="container my-3">
    <div class="row">
        <div class="card border p-0">
            <div class="card-header bg-info">
                <h3 class="card-title text-white text-center"><strong>Editar Categoría</strong></h3>
            </div>

            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="CategoryId" type="hidden" />

                    <div class="form-group my-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                        <span asp-validation-for="Name" class="text-danger my-2"></span>
                    </div>

                    <div class="form-group my-3">
                        <label asp-for="Order" class="form-label"></label>
                        <input asp-for="Order" type="text" class="form-control" placeholder="Ingrese el orden de visualización de la categoría" />
                        <span asp-validation-for="Order" class="text-danger my-2"></span>
                    </div>

                    <div class="form-group my-3">
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-info" style="width:30%"><strong>Actualizar</strong></button> &nbsp;
                            <a asp-action="Index" class="btn btn-light" style="width:30%"><strong>Volver</strong></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>